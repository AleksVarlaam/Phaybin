<%= turbo_frame_tag gallery do %>
    <%= link_to gallery_path(gallery), data: {turbo_frame: '_top'} do %>
        <div class="h-[24rem] md:h-[22rem] w-auto bg-opacity-0 dark:text-gray-400 hover:dark:text-gray-300 mb-6">
            <!-- Category image -->
            <%= tag.div class: "flex justify-center" do %>
                <%= image_tag gallery.images.last.medium.url, class: 'h-[22rem] w-auto object-cover'%>
            <% end if gallery.images.present? %>
            <!-- Category title -->
            <div class="p-5 text-center">
                <%= tag.h5 gallery.title, 
                    class: "text-2xl font-bold tracking-tight " %>
            </div>
        </div>
    <% end if gallery.images.count.positive?%>
<% end %>



