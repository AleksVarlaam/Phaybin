<%= turbo_stream.replace dom_id(@gallery, 'form') do %>
    <!-- Category -->
    <%= turbo_frame_tag dom_id(@gallery, 'form'), 
        class: 'items-center flex mx-auto my-4 w-full relative border-b border-b-gray-500 hover:border-b-gray-300' do %>
        <!-- Title -->
        <%= tag.p @gallery.title, class: "text-start dark:text-gray-500 text-xl font-bold uppercase" %>
        <!-- Link edit -->
        <%= link_to edit_admins_gallery_path(@gallery), data: {turbo_frame: dom_id(@gallery, 'form')},
            class: 'absolute right-0 top-0 flex py-0 sm:mr-2 text-base font-medium justify-end items-center text-end text-gray-500 hover:text-gray-700 hover:underline
                dark:text-gray-300 dark:hover:text-gray-500' do %>
            <%= heroicon 'pencil-square', class: 'w-5 h-5'%>
        <% end %>
    <% end %>
<% end %>

<%= prepend_flash%>