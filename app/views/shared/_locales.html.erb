<!-- Locales -->
<div data-controller="dropdown" class="relative <%= '-mr-3' if admin_signed_in?%>">
  <!-- Current locale -->
  <button 
      type="button" 
      data-action="dropdown#toggle click@window->dropdown#hide"
      class="flex items-center  whitespace-nowrap text-base font-medium text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-200"
      title="locales-menu-button"
  >
      <%= heroicon 'language', class: 'w-6 h-6'%>
      <svg aria-hidden="true" class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
  </button>

  <div
    data-dropdown-target="menu"
    class="hidden transition transform absolute ltr:origin-top-right rtl:origin-top-left ltr:right-0 rtl:left-0 z-50 w-auto mt-2 border border-gray-700 hover:border-gray-600 shadow-md rounded-lg"
    data-transition-enter-from="opacity-0 scale-95"
    data-transition-enter-to="opacity-100 scale-100"
    data-transition-leave-from="opacity-100 scale-100"
    data-transition-leave-to="opacity-0 scale-95"
  >
    <!-- Locales list -->
    <ul class="py-1 text-sm w-auto text-gray-700 bg-white dark:bg-black rounded-lg shadow-lg">
      <% I18n.available_locales.each do |locale| %>
          <li>
            <% if I18n.locale == locale %>
              <div class="flex items-center w-full tr:mr-4 rtl:ml-4 font-medium block px-4 py-2 text-sm text-gray-800 dark:text-gray-200 hover:dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600 hover:bg-gray-100">
                  <%= image_tag("locales/icons8-#{locale}-48.png", class: 'w-5 h-5 ltr:mr-2 rtl:ml-2')%>
                  <%= t(locale)%>
              </div>
            <% else %>
              <%= link_to url_for(locale: locale), data: { turbo: false, action: "dropdown#toggle"},
                class: 'flex items-center w-full ltr:mr-4 rtl:ml-4 font-medium block px-4 py-2 text-sm text-gray-700 dark:text-gray-400 hover:dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600 hover:bg-gray-100' do 
              %>
                  <%= image_tag("locales/icons8-#{locale}-48.png", class: 'w-5 h-5 ltr:mr-2 rtl:ml-2')%>
                  <%= t(locale)%>
              <% end %>
            <% end %>
          </li>
      <% end %>
    </ul>
  </div>
</div>