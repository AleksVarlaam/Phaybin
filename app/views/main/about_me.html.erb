						<div class="flex">
							<div class="">
    							<%= tag.h3 t('about_me.h3/4'), class: "text-2xl font-medium leadi dark:text-gray-50" %>
    							<%= tag.p t('about_me.h3/4_desc'), class: "mt-2 dark:text-gray-400 text-lg" %>
							</div>
						</div>
						<div class="flex">
							<div class="">
    							<%= tag.h3 t('about_me.h3/5'), class: "text-2xl font-medium leadi dark:text-gray-50" %>
    							<%= tag.p t('about_me.h3/5_desc'), class: "mt-2 dark:text-gray-400 text-lg" %>
							</div>
						</div>
						<div class="flex">
							<div class="">
    							<%= tag.h3 t('about_me.h3/6'), class: "text-2xl font-medium leadi dark:text-gray-50" %>
