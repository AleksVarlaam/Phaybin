					</div>
					<div class="flex">
						<div class="">
							<%= tag.h3 t('about_me.h3/3'), class: "text-2xl font-medium leadi dark:text-gray-50" %>
							<%= tag.p t('about_me.h3/3_desc'), class: "mt-2 dark:text-gray-400 text-lg" %>
						</div>
					</div>
				</div>
			</div>
			<div aria-hidden="true" class="mt-10 lg:mt-0">
                <%= image_tag(asset_path('background/bg-about-Natalie.jpg'), alt: "Photograther - Natalie Rabinovych",
                    class: "mx-auto lg:max-w-md rounded-lg shadow-lg dark:bg-gray-500")%>
			</div>
		</div>
		<div>
			<div class="grid lg:gap-8 lg:grid-cols-2 lg:items-center">
				<div class="lg:col-start-2">
					<%= tag.h2 t('about_me.h2/2'), class: "text-2xl font-bold tracki sm:text-3xl dark:text-gray-50" %>
					<%= tag.p t('about_me.h2/2_desc'), class: "mt-3 text-lg dark:text-gray-400" %>
