<!-- User sign in form -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!-- Flash messages -->
      <%= render 'admins/shared/error_messages', object: resource%>
      <!-- Email input -->
      <div class="mb-6">
         <%= f.label :email, class: "text-lg text-gray-100" %>
         <%= f.text_field :email, autofocus: true, 
          class: "text-base form-control block w-full px-4 py-2 mt-1 font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none",
          id: "email-input",
          placeholder: 'Email',
          required: true 
         %>
      </div>

      <!-- Password input -->
      <div class="mb-6">
          <div class="flex items-center">
              <%= f.label :password, class: "text-lg text-gray-100" %>
              <% if @minimum_password_length %>
                  <!-- Popover button-->
                  <%= render 'shared/buttons/popover', icon: (heroicon 'exclamation-circle', class: "text-gray-500 ml-2"), 
                      text: "#{Admin.human_attribute_name('password_popover', length: @minimum_password_length)}"%>
              <% end %>
          </div>
          <%= f.password_field :password, autocomplete: "new-password",
          class: "text-base form-control block w-full px-4 py-2 mt-1 font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none",
          id: "password-input",
          placeholder: Admin.human_attribute_name('password') ,
          required: true
         %>
      </div>
      
      <!-- Password confirmation -->
      <div class="mb-6">
          <%= f.label :password_confirmation, class: "text-lg text-gray-100" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "text-base form-control block w-full px-4 py-2 mt-1 font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none",
          id: "password-confirmation-input",
          placeholder: Admin.human_attribute_name('password_confirmation'),
          required: true
         %>
      </div>
      
      <!-- Submit button -->
      <div class="text-center lg:text-center">
          <%= f.submit t('sign_up.btn'), class: "w-full text-white bg-gradient-to-r from-gray-700 via-gray-800 to-gray-900 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-gray-300 dark:focus:ring-gray-800 font-medium rounded-lg text-xl px-5 py-2.5 text-center mr-2 mb-2" %>
      </div>
<% end %>