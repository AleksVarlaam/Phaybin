<!-- Categories -->
<%= link_to admins_galleries_path, 
  class: link_class, 
  data: { action: "dropdown#toggle" }, 
  role: "menuitem",
  tabindex:"-1",
  id:"password&SecurityLink" do 
%>
  <%= heroicon "photo", class: icon_class %>
  <%= t('gallery.title')%>
<% end %>

<!-- Credential Info -->
<%= link_to edit_admin_registration_path, 
  class: link_class, 
  data: { action: "dropdown#toggle" }, 
  role: "menuitem",
  tabindex:"-1",
  id:"password&SecurityLink" do 
%>
  <%= heroicon "lock-closed", class: icon_class %>
  <%= t('user_menu.credential')%>
<% end %>

<hr class="h-px bg-gray-200 border-0 dark:bg-gray-600">
<!-- Sign Out -->
<%= link_to destroy_admin_session_path, 
  class: link_class,
  data: {action: "dropdown#toggle", turbo_method: :delete, turbo_confirm: t('global.are_you_sure')}, 
  role: "menuitem", 
  tabindex:"-1", 
  id:"signOutLink" do 
%>
 <%= heroicon "arrow-right-on-rectangle", class: icon_class %>
 <%= t('user_menu.sign_out')%>
<% end %>

