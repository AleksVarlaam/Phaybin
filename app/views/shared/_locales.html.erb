<!-- Locales -->
  <div class="flex items-center md:order-2">
      <!-- Dropdown button -->
      <button type="button" data-dropdown-toggle="language-dropdown-menu" class="inline-flex items-center justify-center p-2 text-sm text-gray-500 rounded-lg cursor-pointer hover:text-gray-900 hover:bg-gray-100 dark:hover:bg-gray-700 dark:hover:text-white">
        <%= image_tag("locales/icons8-#{I18n.locale}-48.png", class: 'w-6 h-6')%>
        <svg aria-hidden="true" class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
      </button>
      <!-- Dropdown -->
      <div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700" id="language-dropdown-menu">
        <ul class="py-2" role="none">
            <% I18n.available_locales.each do |locale| %>
                <li>
                  <% if I18n.locale == locale %>
                    <div class="flex items-center block w-full mr-4 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-600 dark:hover:text-white">
                        <%= image_tag("locales/icons8-#{locale}-48.png", class: 'w-5 h-5 mr-2')%>
                        <%= t(locale)%>
                    </div>
                  <% else %>
                    <%= link_to url_for(locale: locale),role: "menuitem",
                      class: 'flex items-center block w-full mr-4 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white' do 
                    %>
                        <%= image_tag("locales/icons8-#{locale}-48.png", class: 'w-5 h-5 mr-2')%>
                        <%= t(locale)%>
                    <% end %>
                  <% end %>
                </li>
            <% end %>
        </ul>
      </div>
  </div>