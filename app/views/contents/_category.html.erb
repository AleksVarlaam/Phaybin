<%= turbo_frame_tag category do %>
    <%= link_to category_path(category), data: {turbo_frame: '_top'} do %>
        <div class="h-[24rem] md:h-[22rem] w-auto bg-white shadow dark:bg-black dark:text-gray-500 hover:dark:text-gray-400">
            <% if category.images.present?%>
                <div class="flex justify-center">
                    <%= image_tag category.images.last, class: 'h-[22rem] w-auto object-cover'%>
                </div>
            <% else%>
                <div class="flex items-center justify-center h-56 w-full object-cover bg-gray-50 dark:bg-gray-800">
                    <p class="text-2xl">+</p>
                 </div>
            <% end %>
            <div class="p-5 text-center">
                <%= tag.h5 category.title, 
                    class: "mb-2 text-2xl font-bold tracking-tight " %>
            </div>
        </div>
    <% end if category.images.count.positive?%>
<% end %>



