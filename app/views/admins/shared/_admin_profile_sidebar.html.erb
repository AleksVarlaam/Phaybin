
<div class="bg-white dark:bg-black dark:border-r dark:border-gray-700 dark:hover:border-gray-600 py-3 px-4 shadow-md hidden lg:block min-h-screen h-full -mb-20 pb-14">
    <div class="flex flex-col items-center mt-6 -mx-2">
        <!-- Avatar -->
        <%= image_tag(current_admin.avatar_thumb, class: "object-cover w-24 h-24 mx-2 mb-3 rounded-full", alt: "avatar")%>
        <!-- Name -->
        <%= tag.h4 'Admin', class: "break-all mx-2 font-medium text-xl text-gray-800 dark:text-gray-400 text-center hover:underline" %>
        <!-- Email -->
        <%= tag.p current_admin.email, class: "break-all mx-2 mt-1 text-base font-medium dark:text-gray-500 text-center hover:underline"%>
    </div>
    
    <ul class="space-y-1 text-sm my-3">
        <!-- Links list -->
        <%= render 'admins/shared/admin_menu_links_list', 
            link_class: "flex items-center text-base space-x-3 text-gray-700 dark:text-gray-400 hover:dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline",
            icon_class: "w-4 h-4 mr-2"%>
    </ul>
</div>

