<% currently_at "#{@gallery.model_name.human} #{@gallery.title.downcase}" %>
<% provide :page_title, "#{@gallery.model_name.human} #{@gallery.title.downcase}" %>

<div class="flex items-center justify-center mb-3 sm:my-6 pb-3 space-x-3 rtl:space-x-reverse">
    <!-- Back -->
    <%= link_to (heroicon I18n.locale == :he ? "arrow-uturn-right" : "arrow-uturn-left", 
        class: "w-6 h-6 dark:text-gray-400 hover:dark:text-gray-300"),
        galleries_path , data: {turbo_frame: '_top'} %>
    <!-- Title -->
    <%= tag.h1 @gallery.title, 
        class: " text-center text-3xl text-gray-300" %>
</div>
<%= turbo_frame_tag dom_id(@gallery, :images), 
    class: "container px-4 sm:px-0 mx-auto grid grid-cols-1 sm:grid-cols-2 gap-8 sm:gap-4 mb-6" do %>
    <% @images.each_with_index do |image, index| %>
        <%= turbo_frame_tag image.identifier do %>
            <div class="relative max-h-[32rem] sm:max-h-[36rem] w-auto">
                <div class="flex justify-center">
                    <%= link_to gallery_image_path(@gallery, index), data: {turbo_frame: 'modal'}, remote: true do %>
                        <%= image_tag image.medium.url, class: "max-h-[32rem] sm:max-h-[36rem] w-auto object-cover"%>
                    <% end %>
                </div>
            </div>
        <% end %>
    <% end %>
<% end %>