<%= turbo_frame_tag dom_id(model, :publish) do %>
    <%= link_to publish_path, 
        data: { turbo_method: :post, turbo_confirm: t('global.are_you_sure') }, class: "justify-end items-center flex mx-0 leading-5 text-gray-900 rounded-lg p-2 bg-gray-100 hover:bg-gray-200 inline-block font-medium" do 
    %>
        <!-- Icon with popover -->
        <div class="col-span-full flex justify-center items-center text-gray-800 text-sm">
            <div data-controller="popover" class="items-center flex">
                <button class="relative" 
                    data-action="mouseenter->popover#show mouseleave->popover#hide"
                >
                    <% if model.published == false %>
                        <%= heroicon 'eye', class: 'w-5 h-5' %>
                    <% else %>
                        <%= heroicon 'eye-slash', class: 'w-5 h-5'%>
                    <% end %>
                </button>

                <template data-popover-target="content">
                   <div class="w-auto rounded shadow-lg bg-white absolute left-0 z-20 p-3 mb-2"
                     data-popover-target="card"
                     style="bottom: 2rem; width: max-content;"
                   >
                     <div class="flex px-0">
                         <% if model.published == false %>
                             <%= tag.p t('global.publish_btn'), class: "text-gray-500 text-sm break-all"%>
                         <% else %>
                             <%= tag.p t('global.hide_btn'), class: "text-gray-500 text-sm break-all"%>
                         <% end %>
                     </div>
                   </div>
                </template>
            </div>
        </div>
    <% end %>
<% end %>