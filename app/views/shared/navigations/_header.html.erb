<!-- Header -->
<%= provide :navbar do %>
    <header class="fixed top-0 z-50 w-full  bg-white/60 dark:bg-gray-900/0 ">
        <div class="relative" data-controller="dropdown">
          <div class="w-full mx-auto px-4 sm:px-6">
            <div class="nav-container flex items-center py-2 sm:py-4 justify-between">
              <!-- Social links -->
              <div class="flex justify-start w-auto flex-auto space-x-3 rtl:space-x-reverse <%= admin_signed_in? ? 'ml-2' : '-mr-10'%>">
                  <%= render 'shared/navigations/social_links'%>
              </div>
              <!-- Mobile menu burger button -->
                <div class="flex justify-center flex-none w-auto backdrop-blur-sm bg-white/60 dark:bg-gray-900/60 rounded-lg">
                  <button 
                      data-action="dropdown#toggle click@window->dropdown#hide" 
                      type="button" 
                      class="rounded-lg p-2 inline-flex items-center justify-center text-gray-200 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500" 
                      aria-expanded="false" 
                      aria-labelledby="mobile-menu-button" >
                      <%= heroicon 'bars-3', class: 'h-6 w-6'%>
                  </button>
                </div>
                <!-- Main Navigations -->
                <nav class="hidden  space-x-6 rtl:space-x-reverse">
                    <%= render 'shared/navigations/links_list', 
                        link_class: 'text-base hover:text-gray-900 hover:dark:text-gray-200', 
                        current_page: current_page %>
                </nav>
              <!-- User menu -->
              <div class="flex items-top justify-end flex-auto w-auto ">
                  <div class="flex items-center space-x-5 rtl:space-x-reverse">
                      <!-- Locales -->
                      <%= render 'shared/locales'%>
                      <!-- Menu -->
                      <%= render 'admins/shared/admin_menu' if admin_signed_in?%>
                  </div>
              </div>
            </div>
          </div>
          <!-- Mobile menu -->
          <%= render 'shared/navigations/mobile_menu', current_page: current_page %>
        </div>
    </header>
    <!-- Logotype -->
    <%= tag.div class: "flex justify-center #{admin_signed_in? ? 'pt-20' : 'pt-16'}" do %>
        <%= link_to root_path, class:"", title: 'Phaybin-photographer-Israel' do %>
            <%= image_tag 'PhaybiN-logo-white.webp', alt: 'Phaybin-photographer-Israel',
                class: 'h-[63px] lg:h-[101px] my-3 w-40 lg:w-64'%>
        <% end if current_page?(root_url)%>
    <% end if false%>
<% end %>