<!-- Footer -->
<%= provide :footer do %>
    <footer class="bg-gray-200 dark:bg-black border-t dark:border-gray-700 hover:dark:border-gray-600 relative">
        <%= link_to '#top', class: 'absolute right-2 bottom-5 z-20', data: {controller: 'scroll-to'} do %>
            <%# image_tag('icons/icons8-up-2-50.png', class: 'w-8 hover:w-10 h-auto')%>
        <% end unless controller_name == 'errors'%>
        <div class="container px-6 py-8 mx-auto">
            <div class="text-center">
                <!-- Main title & locals -->
                <div class="relative flex items-center justify-center">
                    <%= image_tag 'PhaybiN-logo-white.png', class: 'h-20 w-auto'%>
                    <%= tag.div (render 'shared/locales'), class: "absolute right-2"%>
                </div>
                <!-- Main navigations -->
                <div class="flex flex-wrap justify-center mt-5 -mx-4">
                    <%= render 'shared/navigations/links_list', 
                        link_class: 'mx-4 text-base font-medium transition-colors duration-300 hover:text-gray-900 hover:dark:text-gray-200',
                        current_page: current_page %>
                </div>
            </div>

            <hr class="my-6 dark:border-gray-700 md:my-10" />
            <!-- Copyright -->
            <div class="flex flex-col items-center w-full md:relative">
                <%= link_to 'phaybin@phaybin.com', "mailto:phaybin@phaybin.com", 
                    class:"text-gray-500 dark:text-gray-500 hover:dark:text-gray-200 md:absolute md:right-0 hover:underline mb-4 md:mb-0"%>
                <p class="text-gray-500 text-center">Â© Copyright <%= Time.now.strftime('%Y')%>. All Rights Reserved.</p>
            </div>
        </div>
    </footer>
<% end%>

