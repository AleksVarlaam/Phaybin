<% if resource.errors.any? %>
    <%= tag.div class: "flex items-start my-4 p-4 text-sm text-red-800 bg-red-200 rounded-lg relative", 
        id: "error_explanation", data: { controller: "turbo-modal", turbo_modal_target: "modal"} do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="flex-shrink-0 text-center w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
          </svg>
        <div class="ml-4 text-sm">
            <h2>
              <%= I18n.t("errors.messages.not_saved",
                         count: resource.errors.count,
                         resource: resource.class.model_name.human) + ':'
               %>
            </h2>
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li> - <%= message %></li>
              <% end %>
            </ul>
        </div>
        <%= render 'shared/buttons/close'%>
    <% end %>
<% end %>
