<%= turbo_frame_tag image do %>
    <div class="relative max-h-[32rem] sm:max-h-[36rem] w-auto">
        <div class="flex justify-center" itemscope itemtype="http://schema.org/ImageObject">
            <%= tag.span "#{image.gallery.decorate.title}-#{image.position}", itemprop: "name", class: "sr-only"%>
            <%= link_to gallery_image_path(@gallery, image), 
                title: "#{image.gallery.decorate.title}-#{image.position}",
                data: {turbo_frame: 'modal'}, remote: true do %>
                <%= image_tag image.file.medium.url, 
                    itemprop: "contentUrl",
                    alt: "#{image.gallery.decorate.title}-#{image.position}",
                    class: "max-h-[32rem] sm:max-h-[36rem] w-auto object-cover cursor-zoom-in"%>
            <% end %>
        </div>
    </div>
<% end %>