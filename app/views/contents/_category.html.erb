<%= turbo_frame_tag category do %>
    <%= link_to category_path(category), data: {turbo_frame: '_top'} do %>
        <div class="h-[24rem] md:h-[22rem] w-auto bg-opacity-0 dark:text-gray-500 hover:dark:text-gray-400 mb-6">
            <!-- Category image -->
            <%= tag.div class: "flex justify-center" do %>
                <%= image_tag category.images.last, class: 'h-[22rem] w-auto object-cover'%>
            <% end if category.images.present? %>
            <!-- Category title -->
            <div class="p-5 text-center">
                <%= tag.h5 category.title, 
                    class: "text-2xl font-bold tracking-tight " %>
            </div>
        </div>
    <% end if category.images.count.positive?%>
<% end %>



