<%= turbo_frame_tag category do %>
    <%= link_to admins_category_path(category), data: {turbo_frame: '_top'} do %>
        <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-black dark:border-gray-700 hover:dark:border-gray-600 dark:text-gray-500 hover:dark:text-gray-400">
            <% if category.images.present?%>
                <%= image_tag category.images.last, class: ' h-56 w-full object-cover'%>
            <% else%>
                <div class="flex items-center justify-center h-56 w-full object-cover rounded bg-gray-50 dark:bg-gray-800">
                    <p class="text-2xl">+</p>
                 </div>
            <% end %>
            <div class="p-5 text-center">
                <%= tag.h5 "#{category.title} (#{category.images.count})", 
                    class: "mb-2 text-2xl font-bold tracking-tight " %>
            </div>
        </div>
    <% end %>
<% end %>



