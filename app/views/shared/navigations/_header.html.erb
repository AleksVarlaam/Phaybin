<!-- Header -->
<%= provide :navbar do %>
    <header class=" static top-0 z-50 w-full bg-opacity-0">
        <div class="relative" data-controller="dropdown">
          <div class="w-full mx-auto px-4 sm:px-6">
            <div class="nav-container flex items-top py-4 ">
              <!-- Social links -->
              <div class="flex justify-start w-auto flex-auto space-x-3">
                  <%= render 'shared/navigations/social_links'%>
              </div>
              <!-- Logotype -->
              <nav class=" lg:flex space-x-6">
                  <%= link_to root_path, class:"flex justify-center" do %>
                      <%= image_tag 'PhaybiN-logo-white.png', class: 'h-12 lg:h-24 mb-3 w-auto'%>
                  <% end%>
              </nav>
              <!-- User menu -->
              <div class="flex items-top justify-end flex-auto w-auto ">
                  <div class="flex items-top space-x-5">
                      <!-- Locales -->
                      <%= render 'shared/locales'%>
                      <!-- Menu -->
                      <%= render 'admins/shared/admin_menu' if admin_signed_in?%>
                  </div>
              </div>
            </div>
          </div>
          <!-- Mobile menu -->
          <%= render 'shared/navigations/mobile_menu', current_page: current_page %>
        </div>
    </header>
<% end %>