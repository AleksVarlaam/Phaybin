<section class="h-auto overflow-y-auto pt-16 pb-6" id="contact_me">
    <div class="container px-6 mx-auto">
        <div class="flex-auto justify-center text-center">
            <!-- Title -->
            <%= tag.h1 t('contact_me.title'), class: "mt-2 text-3xl font-semibold text-gray-800 md:text-3xl dark:text-gray-300" %>
            <!-- Description -->
            <div class="flex justify-center">
                <%= tag.p t('contact_me.desc'), class: "mt-3 text-gray-600 dark:text-gray-400 max-w-2xl text-xl" %>
            </div>
        </div>

        <div class="flex justify-center space-y-3 flex-col mt-6">
            <!-- Contacts -->
            <div class="flex justify-center text-center">
                <div class="space-y-3">
                    <!-- Phone -->
                    <%= link_to 'https://wa.me/972527796556', target: '_blank', class: "flex items-center" do %>
                        <i class="fa-brands fa-whatsapp fa-lg text-gray-600 dark:text-gray-400"></i>
                        <%= tag.span '+972 52-779-6556', class: "mx-2 text-lg text-gray-700 truncate w-auto dark:text-gray-400 hover:dark:text-gray-200 hover:underline"%>
                    <% end %>
                    <div class="flex justify-center space-x-3 rtl:space-x-reverse">
                        <%= render 'shared/navigations/social_links'%>
                    </div>
                </div>
            </div>
            <!-- Email form -->
            <%= render 'contacts/email_form'%>
        </div>
    </div>
</section>