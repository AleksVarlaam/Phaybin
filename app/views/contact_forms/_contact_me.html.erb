<section class="h-auto overflow-y-auto pt-16 pb-6" id="contact_me">
    <div class="container px-6 mx-auto">
        <div class="flex-auto justify-center text-center">
            <!-- Title -->
            <%= tag.h4 t('contact_me.title'), class: "mt-2 text-3xl font-semibold text-gray-800 md:text-3xl dark:text-gray-300" %>
            <!-- Description -->
            <div class="flex justify-center">
                <%= tag.p t('contact_me.desc'), class: "mt-3 text-gray-600 dark:text-gray-400 max-w-2xl text-xl" %>
            </div>
        </div>

        <div class="flex justify-center space-y-3 flex-col mt-6">
            <!-- Contacts -->
            <div class="flex justify-center space-x-3 rtl:space-x-reverse">
                <!-- Phone -->
                <%= link_to 'https://wa.me/972527796556', target: '_blank', title: 'whatsApp',
                    class: "hover:shadow-md text-gray-700 dark:text-gray-300 hover:text-white hover:shadow-gray-300 rounded-full" do %>
                    <i class="fa-brands fa-whatsapp fa-xl"></i>
                <% end %>
                <%= render 'shared/navigations/social_links'%>
            </div>
            <!-- Email form -->
            <%= render 'contact_forms/email_form'%>
        </div>
    </div>
</section>