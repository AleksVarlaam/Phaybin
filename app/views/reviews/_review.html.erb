<%= turbo_frame_tag review do %>
    <div class="flex flex-col w-auto min-w-[20rem] md:min-w-[32rem] md:max-w-lg mx-4 my-6 shadow-sm hover:shadow-md border-t border-t-gray-800 hover:shadow-gray-700 shadow-gray-700 rounded-lg relative">
    	<div class="px-4 sm:px-8 py-12 rounded-t-lg dark:bg-black">
    		<p class="relative py-1 text-lg italic text-center dark:text-gray-100">
    			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" class="w-8 h-8 backdrop-blur-sm bg-white/60 dark:bg-gray-900/60">
    				<path d="M232,246.857V16H16V416H54.4ZM48,48H200V233.143L48,377.905Z"></path>
    				<path d="M280,416h38.4L496,246.857V16H280ZM312,48H464V233.143L312,377.905Z"></path>
    			</svg><%= review.message%>
    			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" class="absolute right-0 w-8 h-8 backdrop-blur-sm bg-white/60 dark:bg-gray-900/60">
    				<path d="M280,185.143V416H496V16H457.6ZM464,384H312V198.857L464,54.1Z"></path>
    				<path d="M232,16H193.6L16,185.143V416H232ZM200,384H48V198.857L200,54.1Z"></path>
    			</svg>
    		</p>
    	</div>
    	<div class="flex flex-col items-center justify-center p-8 rounded-b-lg backdrop-blur-sm bg-white/60 dark:bg-gray-900/60 dark:text-gray-300">
            <%= image_tag review.avatar_thumb, 
                class: "w-16 h-16 mb-2 -mt-16 bg-center object-cover rounded-full dark:bg-gray-500 dark:bg-gray-700"%>
    		<%= tag.p review.user_name, class: "text-xl font-semibold leadi" %>
    		<%= tag.p review.created_at, class:"text-sm uppercase" %>
            <%= link_to review.email, "mailto:#{review.email}", class:"text-sm mt-3 hover:underline" if admin_signed_in?%>
    	</div>
    
        <!-- Delete account -->
        <%= tag.div class: "absolute bottom-2 ltr:right-2 rtl:left-2" do %>
          <%= link_to review_path(review), data: { turbo_method: :delete, turbo_confirm: t('global.are_you_sure') }, 
              class: "justify-end items-center flex mx-0 leading-5 text-gray-700 hover:text-gray-400" do %>
            <%= heroicon('trash', class: 'w-5 h-5 mr-2')%>
            <%= t('global.destroy_btn')%>
          <% end %>
        <% end if admin_signed_in?%>
    </div>
<% end %>